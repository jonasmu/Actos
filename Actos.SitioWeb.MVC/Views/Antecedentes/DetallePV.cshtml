@model Actos.SitioWeb.MVC.ServicioWeb.Antecedente

<span id="hdnId" class="hidden">@Html.DisplayFor(model => model.Id)</span>

<div>
    <h3 class="text-center">
        @Html.DisplayFor(model => model.Nombre)
    </h3>

        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayNameFor(model => model.Estado)
            </dt>

            <dd>
                @switch (Model.Estado.Nombre)
                {
                    case "Activo":
                        <span class="text-success">@Html.DisplayFor(model => model.Estado.Nombre)</span>
                        break;
                    case "Inactivo":
                        <span class="text-danger">@Html.DisplayFor(model => model.Estado.Nombre)</span>
                        break;
                    default:
                        <span>@Html.DisplayFor(model => model.Estado.Nombre)</span>
                        break;
                }
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Puntajes)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Puntajes)
            </dd>

        </dl>

        <hr />

        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayNameFor(model => model.Victima)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Victima.Nombre)
                @Html.DisplayFor(model => model.Victima.Apellido)
                @Html.DisplayFor(model => model.Victima.Apodo)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Agresor)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Agresor.Nombre)
                @Html.DisplayFor(model => model.Agresor.Apellido)
                @Html.DisplayFor(model => model.Agresor.Apodo)
            </dd>

        </dl>

        <hr />

        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayNameFor(model => model.Fecha)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Fecha)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Observaciones)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Observaciones)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Perjuicios)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Perjuicios)
            </dd>

        </dl>

        <hr />

        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayNameFor(model => model.Ubicacion)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Ubicacion)
            </dd>

        </dl>
    </div>


<div class="text-center">
    <input type="button" id="btnModificar" class="btn btn-warning" value="Modificar" />
    @*@Html.ActionLink("Modificar", "Modificar", new { id = Model.Id }, new { @class = "btn btn-warning", style = "color:white" })*@
    <input type="button" id="btnEliminar" class="btn btn-warning" value="Eliminar" />
</div>

<div id="modalEliminar"></div>

<script src="~/Scripts/appjs/antecedentes-detallepv.js"></script>
