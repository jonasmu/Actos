@model Actos.SitioWeb.MVC.ServicioWeb.Antecedente

<!--ATRIBUTOS-->
<input type="hidden" id="hdnAgresorId" value="" />
<input type="hidden" id="hdnVictimaId" value="" />


<div id="error" style="color:red; font-size:20px; text-align:center"></div>

<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-lg-4" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-lg-4">Víctima</label>
        <div class="col-lg-8">
            <span id="spanVictimaElegida">(elegir)</span>
            <input type="button" id="btnElegirVictima" value="+" class="btn btn-success" style="float:right" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-lg-4">Agresor</label>
        <div class="col-lg-8">
            <span id="spanAgresorElegido">(elegir)</span>
            <input type="button" id="btnElegirAgresor" value="+" class="btn btn-success" style="float:right" />
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Fecha, htmlAttributes: new { @class = "control-label col-lg-4" })
        <div class="col-lg-8">
            @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { id = "dtpFecha", @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Ubicacion, htmlAttributes: new { @class = "control-label col-lg-4" })
        <div class="col-lg-8">
            @Html.EditorFor(model => model.Ubicacion, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Observaciones, htmlAttributes: new { @class = "control-label col-lg-4" })
        <div class="col-lg-8">
            @Html.EditorFor(model => model.Observaciones, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Perjuicios, htmlAttributes: new { @class = "control-label col-lg-4" })
        <div class="col-lg-8">
            @Html.EditorFor(model => model.Perjuicios, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="text-center">
        <input type="button" value="Crear" id="btnCrearPV" class="btn btn-success" />
    </div>
</div>

<div id="modalElegirVictima"></div>
<div id="modalElegirAgresor"></div>


<script src="~/Scripts/appjs/antecedentes-modificar-crearpv.js"></script>
<script src="~/Scripts/appjs/antecedentes-crearpv.js"></script>

