@model IEnumerable<Actos.SitioWeb.MVC.ServicioWeb.Telefono>

<div class="table-responsive" style="height: 250px; overflow: auto;">
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Tipo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Localidad.CodigoArea)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Numero)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tipo.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Localidad.CodigoArea)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Numero)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
