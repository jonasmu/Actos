@model IEnumerable<Actos.SitioWeb.MVC.ServicioWeb.Victima>
<div class="datagrid">
    <div class="table-responsive">
        <table class="table-condensed table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Apellido)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Apodo)
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td class="IdClass hidden">
                            <span>@Html.DisplayFor(modelItem => item.Id)</span>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Apellido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Apodo)
                        </td>
                        <td>
                            <input type="button" class="btnDetalle btn btn-warning" value="Detalle" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script src="~/Scripts/appjs/victimas-listadotablapv.js"></script>
